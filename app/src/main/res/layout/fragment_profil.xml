<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:padding="20dp"
    tools:context=".Fragments.QuizFragment"
    tools:layout_editor_absoluteY="81dp">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/profilPicture"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/users"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/questionNumberTextView" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:textSize="32dp"
        android:textColor="@android:color/white"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@id/profilPicture"
        app:layout_constraintLeft_toRightOf="@id/profilPicture" />

    <TextView
        android:id="@+id/questionDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="24dp"
        android:text="Donec non sollicitudin metus. Donec rutrum, nunc ut blandit pulvinar, dolor mi efficitur turpis, ac tristique magna erat vulputate nulla. Maecenas cursus, tellus non mattis vestibulum, nisi sem lacinia nisl, ac pharetra est magna eget enim. Phasellus congue hendrerit nisi, vitae iaculis neque sollicitudin vel. Proin nec maximus metus. Morbi bibendum eget ligula vitae ultrices. Donec non turpis velit. Integer at ante sapien."
        android:textColor="@android:color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/questionNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opis"
        android:textColor="@color/design_default_color_surface"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/questionDescriptionTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.915" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/questionDescriptionTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:overScrollMode="always"
        android:scrollbarStyle="insideOverlay"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        tools:layout_editor_absoluteX="63dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <RelativeLayout
                android:id="@+id/places_visited"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/map"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/map"
                    app:srcCompat="@drawable/map" />

                <TextView
                    android:id="@+id/map_text_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/map"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@id/map"
                    android:text="Ilosc miejsc odwiedzonych"
                    android:textColor="@color/design_default_color_surface"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/map_text_botom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/map_text_top"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/map"
                    android:text="xxx miejsc odwiedzonych"
                    android:textColor="#a3a3a3"
                    android:textSize="12dp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/quzies_completed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/test"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/test" />


                <TextView
                    android:id="@+id/test_text_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_alignTop="@id/test"
                    android:text="Ilosc ukonczonych quizow"
                    android:layout_toRightOf="@id/test"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/design_default_color_surface"/>

                <TextView
                    android:id="@+id/test_text_botom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_toRightOf="@id/test"
                    android:layout_below="@id/test_text_top"
                    android:text="xxx ukonczonych quizow"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#a3a3a3"/>

            </RelativeLayout>
            <RelativeLayout
            android:id="@+id/favorite_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/marker"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/marker"
                app:srcCompat="@drawable/marker" />

            <TextView
                android:id="@+id/marker_text_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_alignTop="@id/marker"
                android:text="Ulubione miejsce"
                android:layout_toRightOf="@id/marker"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/design_default_color_surface" />

            <TextView
                android:id="@+id/marker_text_botom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_toRightOf="@id/marker"
                android:layout_below="@id/marker_text_top"
                android:text="xxx "
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:textColor="#a3a3a3"/>

        </RelativeLayout>

            <RelativeLayout
            android:id="@+id/distance_traveled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/route"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/route" />

            <TextView
                android:id="@+id/route_text_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_alignTop="@id/route"
                android:text="ilosc pokonanych kilometrow"
                android:layout_toRightOf="@id/route"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/design_default_color_surface"/>

            <TextView
                android:id="@+id/route_text_botom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_toRightOf="@id/route"
                android:layout_below="@id/route_text_top"
                android:text="xxx  pokonanych kilometrow"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:textColor="#a3a3a3" />
        </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>