<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#231f20"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/upButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="30dp"

                android:src="@drawable/menu"
                android:transitionName="transision_menu"
                android:visibility="visible"
                app:srcCompat="@drawable/menu" />


            <TextView
                android:id="@+id/quizName"
                android:layout_width="215dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical|center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:text="BIENNALE GO"
                android:textColor="#fbfbfb"
                android:textSize="30dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/topRightButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|end"

                android:layout_marginRight="30dp"
                android:src="@drawable/poi"
                android:transitionName="transision_menu"
                android:visibility="visible"
                app:srcCompat="@drawable/marker" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/topBar"
            android:layout_marginTop="64dp"
            android:gravity="center_vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="215dp"
                    android:layout_height="39dp"
                    android:layout_alignParentTop="true"


                    android:layout_marginStart="24dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="84dp"
                    android:text="Załóź konto,"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/underTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/underTitle"
                    android:layout_width="321dp"
                    android:layout_height="158dp"

                    android:layout_marginStart="24dp"
                    android:layout_marginTop="172dp"
                    android:layout_marginEnd="8dp"
                    android:text="wybierz jedną z tras                                 i odkrywaj wraz z nami elbląskie formy przestrzenne."
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/nextToImg"
                    android:layout_width="277dp"
                    android:layout_height="262dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="end"
                    android:text="Zasada jest prosta,
za każdym razem
gdy znajdziesz sie
przy jednej z rzeźb
odpowiedź na dwa
proste pytania
z nią związane.
Zbieraj punkty i porównuj
je ze swoimi znajomymi!"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/underTitle" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>
    </RelativeLayout>

